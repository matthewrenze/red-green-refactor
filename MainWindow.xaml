<Window x:Class="RedGreenRefactor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Red, Green, Refactor" Height="489" Width="526" Background="White">
    <Canvas 
        Name="canvas" 
        HorizontalAlignment="Center" 
        VerticalAlignment="Center">
        <Button 
            Name="btnRed" 
            Content="Red" 
            Background="Red" 
            Foreground="White" 
            FontWeight="Bold" 
            Canvas.Top="-140" 
            Width="172" 
            Height="63" 
            Canvas.Left="-86"
            Click="btnRed_Click" />
        <Button 
            Name="btnGreen" 
            Content="Green"
            Background="Green" 
            Foreground="White" 
            FontWeight="Bold" 
            Width="172" 
            Height="63" 
            Canvas.Left="-86" 
            Canvas.Top="-38" 
            Click="btnGreen_Click" />
        <Button 
            Name="btnRefactor" 
            Content="Refactor"
            Background="Blue" 
            Foreground="White" 
            FontWeight="Bold" 
            Canvas.Top="62" 
            Width="172" 
            Height="63" 
            Canvas.Left="-86" 
            Click="btnRefactor_Click" />
    </Canvas>
</Window>
